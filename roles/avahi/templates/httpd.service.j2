<?xml version="1.0" standalone="no"?><!--*-nxml-*-->
<!DOCTYPE service-group SYSTEM "avahi-service.dtd">
{% for item in avahi_aliases -%}
<service-group>
	<name replace-wildcards="yes">{{ avahi_banner }}</name>
	<service>
    	<domain-name>local</domain-name>
    	<host-name>{{ item }}.local</host-name>
		<type>_http._tcp</type>
		<port>80</port>
	</service>
</service-group>
{% endfor %}
